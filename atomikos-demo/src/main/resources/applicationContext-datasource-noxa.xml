		<!--&lt;!&ndash; Mapper接口所在包名，Spring会自动查找其下的Mapper &ndash;&gt;-->
		<!--<property name="basePackage" value="com.loftor.mapper.pay"/>-->
	<!--</bean>-->
</beans>
